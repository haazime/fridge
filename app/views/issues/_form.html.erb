<div id="js-issue-form">
  <%= form_with model: form, scope: :form, url: url, method: method do |f| %>
    <div class="mb-2">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 3, class: 'form-control' %>
    </div>
    <div class="row">
      <div class="col-lg-5">
        <%= f.select :type, all_issue_types.map { |type| [t(type.to_s, scope: 'domain.issue.types'), type.to_s] }, { prompt: true }, { class: 'form-control', disabled: method == :patch }  %>
        <% if method == :patch %>
          <%= f.hidden_field :type %>
        <% end %>
      </div>
    </div>
    <div class="mt-2">
      <%= f.button btn_label, class: 'btn btn-success', data: with_loader %>
    </div>
  <% end -%>
</div>
