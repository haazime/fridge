<% content_for(:member_role) { scrum_team_member_role } %>
<div class="row d-flex justify-content-center">
  <div class="col-lg-8 sheet">
    <div class="d-flex justify-content-center">
      <h1 class="page-title">
        <%=t '.title' %>
      </h1>
      <div class="pbi-edit__status">
        <span class="pbi__status-label pbi__status-label--<%= @issue.status %>">
          <%=t @issue.status, scope: 'domain.issue.statuses' %>
        <span>
      </div>
    </div>
    <%= render partial: 'form', locals: { form: @form, url: issue_path(@issue.id), method: :patch, btn_label: t('navs.save') } %>
    <hr>
    <div>
      <label>
        <%= t '.title_ac' %>
      </label>
      <div class="ac-list mt-1">
        <% @issue.criteria.each do |c| %>
          <%= render partial: 'acceptance_criteria/item', locals: { issue_id: @issue.id, criterion: c, editable: true } %>
        <% end %>
      </div>
    </div>
    <div class="mt-3">
      <%= render partial: 'acceptance_criteria/form', locals: { issue_id: @issue.id } %>
    </div>
  </div>
</div>
<div class="row d-flex justify-content-center">
  <div class="d-flex mt-2">
    <%= link_to product_backlog_path(product_id: current_product_id), class: 'text-md' do %>
      <i class="fas fa-reply"></i>
      <%=t 'navs.back' %>
    <% end %>
  </div>
</div>
