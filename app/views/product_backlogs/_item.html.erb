<%= content_tag :div, id: "js-pbl-item-#{item.id}", class: pbl_item_css_classes(item), data: { id: item.id } do %>
  <div class="pbl-item">
    <span class="<%= pbl_item_grip_css_classes(can_move) %>">
      <i class="fas fa-grip-vertical"></i>
    </span>
    <%= simple_format(item.description, class: 'pbl-item__description nf') %>
    <div class="pbl-item__actions">
      <div class="pbl-item__ac-containter">
        <%= link_to "#clp-pbi-ac-#{item.id}", collapse_trigger_options(class: pbl_item_criteria_css_classes(item)) do %>
          <i class="fas fa-list"></i>
        <% end %>
      </div>
      <%= render partial: 'product_backlogs/point', locals: { item: item } %>
      <%= render partial: 'product_backlogs/item_menu', locals: { item: item, can_remove: can_remove && item.status.can_remove? } %>
    </div>
  </div>
  <div class="collapse pbl-item__ac" id="clp-pbi-ac-<%= item.id %>">
    <hr style="margin: 0.5rem 0;">
    <%= render partial: 'issues/acceptance_criteria', locals: { item: item } %>
  </div>
<% end %>
