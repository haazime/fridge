<div class="dropdown">
  <%= link_to '#', dd_trigger_options(id: "dd-pbi-#{item.id}", class: 'pbl-item__menu') do %>
    <i class="fas fa-ellipsis-h"></i>
  <% end -%>
  <div class="dropdown-menu dropdown-menu-right">
    <%= link_to edit_issue_path(item.id), class: 'dropdown-item' do %>
      <i class="fas fa-edit"></i>
      <%=t 'navs.edit' %>
    <% end %>
    <% if item.status.can_remove? %>
      <%= link_to issue_path(item.id), method: :delete, class: 'dropdown-item text-danger', data: { confirm: t('navs.confirm_delete') } do %>
        <i class="fas fa-trash-alt"></i>
        <%=t 'navs.delete' %>
      <% end %>
    <% end %>
    <% if item.status.can_start_development? %>
      <div class="dropdown-divider"></div>
      <%= link_to pbi_developments_path(id: item.id), method: :post, remote: true, class: 'dropdown-item' do %>
        <%=t 'domain.pbi.start_development' %>
      <% end %>
    <% end %>
    <% if item.status.can_abort_development? %>
      <div class="dropdown-divider"></div>
      <%= link_to pbi_development_path(item.id), method: :delete, remote: true, data: { confirm: t('.confirm_abort_development') }, class: 'dropdown-item' do %>
        <%=t 'domain.pbi.abort_development' %>
      <% end %>
    <% end %>
  </div>
</div>
