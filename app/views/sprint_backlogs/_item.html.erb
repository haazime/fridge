<div class="sbl-item">
  <span class="<%= sbl_item_grip_css_classes(true) %>"<%= true && ' data-test-item-movable=1' %>>
    <i class="fas fa-grip-vertical"></i>
  </span>
  <div class="sbl-item__body">
    <div class="sbl-item__issue">
      <%= render partial: 'issue', locals: { issue: item } %>
    </div>
    <div class="sbl-item__task">
      <% if item.tasks.any? %>
        <div id="js-task-list-<%= item.id %>" class="sbi-task__list">
          <%= render partial: 'task', collection: item.tasks %>
        </div>
      <% end %>
      <%= render partial: 'task_form', locals: { issue_id: item.id, form: nil } %>
    </div>
  </div>
</div>
