<% tasks = [
  { content: 'API設計', progress: :done },
  { content: 'FE実装', progress: :wip },
  { content: 'BE実装', progress: :todo },
  { content: 'Devレビュー', progress: :todo },
  { content: 'POレビュー', progress: :todo },
] %>
<div class="sbl-item">
  <span class="<%= sbl_item_grip_css_classes(true) %>"<%= true && ' data-test-item-movable=1' %>>
    <i class="fas fa-grip-vertical"></i>
  </span>
  <div class="sbl-item__body">
    <div class="sbl-item__issue">
      <p class="sbi-issue__content">
        <%= item[:content].html_safe %>
      </p>
      <div class="sbi-issue__ac-list">
        <% item[:criteria].each do |c| %>
          <p class="sbi-issue__ac-item">
            <%= c %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="sbl-item__task">
      <div class="sbi-task__list">
        <%= render partial: 'task', collection: tasks %>
      </div>
      <div class="sbi-task__form">
        <form>
          <div class="input-group">
            <input type="text" class="form-control" placeholder="<%=t '.task_placeholder' %>">
            <div class="input-group-append">
              <button class="btn btn-success btn-lean">
                <i class="fa fa-plus"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
