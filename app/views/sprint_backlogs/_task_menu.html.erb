<div class="dropdown">
  <%= link_to '#', dd_trigger_options(id: task_dom_id(task, 'dd-sbi-task'), class: 'sbi-task__menu') do %>
    <i class="fas fa-ellipsis-h"></i>
  <% end -%>
  <div class="dropdown-menu dropdown-menu-right">
    <% task.available_activities.each do |a| %>
      <%= task_action_link(task, a, { class: 'dropdown-item' }) %>
    <% end %>
    <% if task.available_activities.size > 0 %>
      <div class="dropdown-divider"></div>
    <% end %>
    <%= link_to '#', class: 'dropdown-item', data: { action: 'inline-edit#open' } do %>
      <i class="fas fa-edit"></i>
      <%=t 'navs.edit' %>
    <% end %>
    <%= link_to work_task_path(global_task_params(task)), method: :delete, remote: true, class: 'dropdown-item text-danger', data: { confirm: t('navs.confirm_delete'), "test_remove_task" => 1 } do %>
      <i class="fas fa-trash-alt"></i>
      <%=t 'navs.delete' %>
    <% end %>
  </div>
</div>
