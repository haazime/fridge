<div class="sbi-issue__main">
  <%= simple_format(issue.description, class: 'sbi-issue__content') %>
  <div class="sbi-issue__ac-list">
    <% issue.criteria.each do |c| %>
      <p class="sbi-issue__ac-item">
        <%= c.content %>
      </p>
    <% end %>
  </div>
  <div class="mt-auto">
    <%= link_to '', class: 'btn btn-sm btn-outline-secondary', data: { "test_cancel_sprint_assign_#{}" => 1 } do %>
      <i class="fas fa-reply"></i>
      <%=t 'domain.issue.cancel_sprint_assign' %>
    <% end %>
  </div>
</div>
