<% content_for(:member_roles) { team_member_roles_label } %>
<div class="row d-flex justify-content-center">
  <div class="col-lg-<%= @sprint ? '12' : '5' %> sheet">
    <div class="d-flex justify-content-center">
      <h1 class="page-title">
        <%=t '.title' %>
      </h1>
    </div>
    <% if @sprint %>
      <%= render partial: 'list', locals: { sprint: @sprint } %>
    <% else %>
      <%= render partial: 'sprints/form', locals: { product_id: current_product.id } %>
    <% end %>
  </div>
</div>
<div class="row d-flex justify-content-center">
  <div class="d-flex mt-2">
    <%= link_to products_path, class: 'text-md' do %>
      <i class="fas fa-reply"></i>
      <%=t 'navs.back' %>
    <% end %>
  </div>
</div>
