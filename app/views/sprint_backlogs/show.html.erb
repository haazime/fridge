<% content_for(:member_roles) { team_member_roles_label } %>
<% sprint = 1 %>
<div class="row d-flex justify-content-center">
  <div class="col-lg-<%= sprint ? '11' : '5' %> sheet">
    <div class="d-flex justify-content-center">
      <h1 class="page-title">
        <%=t '.title' %>
      </h1>
    </div>
    <% if sprint %>
      <%= render partial: 'list' %>
    <% else %>
      <%= render partial: 'sprints/form' %>
    <% end %>
  </div>
</div>
<div class="row d-flex justify-content-center">
  <div class="d-flex mt-2">
    <%= link_to products_path, class: 'text-md' do %>
      <i class="fas fa-reply"></i>
      <%=t 'navs.back' %>
    <% end %>
  </div>
</div>
