<% content_for(:member_role) { current_team_member.role } %>
<div class="row d-flex justify-content-center">
  <div class="col-lg-10 sheet">
    <div class="row d-flex justify-content-center">
      <div class="sheet__left">
        <%= link_to '#anchor-new-pbi', class: 'btn btn-sm btn-outline-success' do %>
          <i class="fas fa-plus"></i>
          <%=t '.add' %>
        <% end %>
      </div>
      <h1 class="page-title">
        <%=t '.title' %>
      </h1>
    </div>
    <div class="d-flex align-items-center justify-content-center">
      <%= render partial: 'legend' %>
      <div class="sheet__right">
        <%= link_to t('.add_release'), new_product_release_path(product_id: current_product_id), class: 'btn btn-sm btn-outline-secondary' %>
      </div>
    </div>
    <div class="mt-3">
      <%= render partial: 'release', collection: @releases %>
    </div>
    <div id="anchor-new-pbi" class="pbl__form form-outer">
      <%= render partial: 'features/form', locals: { form: @form, url: product_features_path(current_product_id), method: :post, btn_label: t('.add') } %>
    </div>
  </div>
</div>
