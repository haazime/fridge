<%= form_with model: @form, scope: :form, url: url, method: method, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', autocomplete: 'off' %>
  </div>
  <div class="form-group">
    <%= f.label :role %>
    <%= f.collection_select :role, Team::Role.values, :to_s, -> (v) { t(v, scope: 'domain.team.role') }, { prompt: true }, class: 'form-control' %>
  </div>
  <%= f.button t(".submit.#{method}"), class: 'btn btn-success', data: with_loader %>
<% end %>
