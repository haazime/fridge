<%= form_with model: form, scope: :form, url: products_path, id: 'js-product-form' do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', autocomplete: 'off' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :member_role %>
    <%= f.collection_select :member_role, Team::Role.values, :to_s, -> (v) { t(v, scope: 'domain.team.role') }, { prompt: true }, class: 'form-control' %>
  </div>
  <%= f.button t('navs.create'), class: 'btn btn-success' %>
<% end %>
