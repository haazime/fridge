<div id="js-pbi-form" class="form-outer">
  <%= form_with model: form, scope: :form, url: url, method: method do |f| %>
    <%= f.hidden_field :product_id %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, rows: 3, class: 'form-control' %>
    </div>
    <%= f.button btn_label, class: 'btn btn-success' %>
  <% end -%>
</div>
