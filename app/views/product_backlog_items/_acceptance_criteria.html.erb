<% if item.criteria.any? %>
  <div class="ac-list ac-list--small">
    <% item.criteria.each do |criterion| %>
      <%= render partial: 'acceptance_criteria/item', locals: { criterion: criterion, editable: false } %>
    <% end %>
  </div>
<% else %>
  <span class="text-muted text-sm">
    <%=t '.empty' %>
  </span>
<% end %>
