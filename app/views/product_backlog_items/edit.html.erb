<% content_for(:product_name) { current_product(@pbi.product_id)&.name } %>
<div class="row d-flex justify-content-center">
  <div class="col-lg-8 sheet">
    <div class="d-flex justify-content-center">
      <h1 class="page-title">
        <%=t '.title' %>
      </h1>
    </div>
    <%= render partial: 'form', locals: { form: @pbi_form, url: product_backlog_item_path(@pbi.id), method: :put, btn_label: t('navs.save') } %>
    <hr>
    <div>
      <label>
        <%= t '.title_ac' %>
      </label>
      <div class="ac-list mt-1">
        <% @pbi.criteria.each do |c| %>
          <%= render partial: 'acceptance_criteria/item', locals: { criterion: c, editable: true } %>
        <% end %>
      </div>
    </div>
    <div class="mt-3">
      <%= render partial: 'acceptance_criteria/form', locals: { pbi: @pbi } %>
    </div>
  </div>
</div>
<div class="row d-flex justify-content-center">
  <div class="d-flex mt-2">
    <%= link_to product_product_backlog_items_path(product_id: @pbi.product_id), class: 'text-md' do %>
      <i class="fas fa-reply"></i>
      <%=t 'navs.back' %>
    <% end %>
  </div>
</div>
