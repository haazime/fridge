<% content_for(:product_name) { current_product.name } %>
<% content_for(:member_role) { current_team_member.role } %>
<div class="row d-flex justify-content-center">
  <div class="col-lg-8 sheet">
    <div class="d-flex justify-content-center">
      <h1 class="page-title">
        <%=t '.title' %>
      </h1>
      <div class="pbi-edit__status">
        <span class="pbi__status-label pbi__status-label--<%= @pbi.status %>">
          <%=t @pbi.status, scope: 'domain.pbi.statuses' %>
        <span>
      </div>
    </div>
    <%= render partial: 'form', locals: { form: @pbi_form, url: product_backlog_item_path(@pbi.id), method: :put, btn_label: t('navs.save') } %>
    <hr>
    <div>
      <label>
        <%= t '.title_ac' %>
      </label>
      <div class="ac-list mt-1">
        <% @pbi.criteria.each do |c| %>
          <%= render partial: 'acceptance_criteria/item', locals: { pbi_id: @pbi.id, criterion: c, editable: true } %>
        <% end %>
      </div>
    </div>
    <div class="mt-3">
      <%= render partial: 'acceptance_criteria/form', locals: { pbi_id: @pbi.id } %>
    </div>
  </div>
</div>
<div class="row d-flex justify-content-center">
  <div class="d-flex mt-2">
    <%= link_to product_product_backlog_items_path(product_id: @pbi.product_id, status: params[:status]), class: 'text-md' do %>
      <i class="fas fa-reply"></i>
      <%=t 'navs.back' %>
    <% end %>
  </div>
</div>
