<% content_for(:product_name) { current_product.name } %>
<% content_for(:member_role) { current_team_member.role } %>
<div class="row d-flex justify-content-center">
  <div class="col-lg-9 sheet">
    <div class="d-flex justify-content-center">
      <h1 class="page-title">
        <%=t '.title' %>
      </h1>
    </div>
    <div class="d-flex justify-content-center mb-3">
      <%= link_to '#anchor-new-pbi', class: 'btn btn-outline-success', data: { controller: 'hello' } do %>
        <i class="fas fa-plus"></i>
        <%=t '.add' %>
      <% end %>
    </div>
    <div class="pbl" data-controller="sort-pbl" data-sort-pbl-handle=".pbl-item__grip" data-sort-pbl-url="<%= product_product_backlog_order_path(product_id: params[:product_id]) %>">
      <%= render partial: 'item', collection: @items %>
    </div>
    <div id="anchor-new-pbi" class="pbl__form form-outer">
      <%= render partial: 'form', locals: { form: @form, url: product_product_backlog_items_path(params[:product_id]), method: :post, btn_label: t('.add') } %>
    </div>
  </div>
</div>
