<div class="dropdown">
  <% opt = item.status.can_estimate_size? ? dd_trigger_options(id: "dd-pbi-point-#{item.id}", class: 'pbl-item__point') : { class: 'pbl-item__point' } %>
  <%= content_tag :span, present_story_point(item.size), opt %>
  <div class="dropdown-menu dropdown-menu-right p-3 py-2">
    <%= form_with scope: :form, url: product_backlog_item_estimation_path(item.id, is_sortable: is_sortable), method: :put do |f| %>
      <div class="form-group">
        <%= f.label t '.point' %>
        <%= f.collection_select :point, all_story_points, :to_s, :to_s, { selected: present_story_point(item.size) }, { class: 'form-control' } %>
      </div>
      <%= f.button t('navs.save'), class: 'btn btn-success', data: with_loader %>
    <% end %>
  </div>
</div>
